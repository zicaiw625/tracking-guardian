{
  "name": "tracking-guardian",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "build": "remix vite:build",
    "dev": "shopify app dev",
    "preinstall": "node scripts/enforce-pnpm.mjs",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "generate": "prisma generate",
    "setup": "prisma generate && prisma migrate deploy",
    "docker-start": "pnpm setup && pnpm start",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "render-build": "pnpm generate && pnpm db:deploy && pnpm ext:inject && pnpm ext:validate && pnpm build",
    "pretest": "prisma generate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "check:api-version": "node scripts/check-api-version.mjs",
    "lint:graphql-only": "node scripts/check-graphql-only.mjs",
    "security:audit": "node scripts/security-audit.mjs",
    "lint:all": "pnpm lint && pnpm typecheck && pnpm check:api-version && pnpm lint:graphql-only",
    "ci:lint": "pnpm lint && pnpm typecheck",
    "ci:test": "pnpm test",
    "ci:compliance": "pnpm check:api-version && pnpm lint:graphql-only && pnpm test -- --testPathPattern='api-version-consistency'",
    "ci:security": "pnpm audit -P --audit-level=moderate && pnpm check:licenses",
    "check:licenses": "node scripts/check-licenses.mjs",
    "ci": "pnpm ci:lint && pnpm ci:compliance && pnpm ci:test && pnpm ci:security",
    "ext:inject": "node scripts/build-extensions.mjs inject",
    "ext:restore": "node scripts/build-extensions.mjs restore",
    "ext:validate": "node scripts/validate-extensions.mjs",
    "pre-deploy:check": "node scripts/pre-deploy-check.mjs",
    "deploy:ext": "pnpm pre-deploy:check && pnpm ext:inject && pnpm ext:validate && shopify app deploy && pnpm ext:restore"
  },
  "type": "module",
  "engines": {
    "node": ">=20.10 <23"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@remix-run/node": "^2.17.4",
    "@remix-run/react": "^2.17.4",
    "@remix-run/serve": "^2.17.4",
    "@shopify/app-bridge": "^3.7.11",
    "@shopify/app-bridge-react": "^4.1.2",
    "@shopify/polaris": "^13.0.0",
    "@shopify/shopify-api": "^12.3.0",
    "@shopify/shopify-app-remix": "^4.1.1",
    "@shopify/shopify-app-session-storage-prisma": "^8.0.1",
    "chart.js": "^4.4.1",
    "isbot": "^5.1.2",
    "jose": "^6.1.3",
    "pdfkit": "^0.17.2",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "redis": "^4.6.13",
    "resend": "^3.2.0",
    "web-vitals": "^4.2.4",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.17.4",
    "@shopify/api-codegen-preset": "^1.0.0",
    "@types/pdfkit": "^0.17.4",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.2.5",
    "prisma": "^6.19.0",
    "typescript": "^5.4.2",
    "vite": "^5.4.21",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.0"
  },
  "pnpm": {
    "overrides": {
      "@remix-run/router": "^1.23.2",
      "react-router": "^6.30.2",
      "@remix-run/server-runtime": "^2.17.3",
      "@remix-run/dev>valibot": "^1.2.0",
      "cacache": "^19.0.1",
      "tar": "^7.5.4",
      "esbuild": "^0.25.0",
      "undici": "^6.23.0",
      "diff": "^5.2.2",
      "@shopify/ui-extensions": "2025.7.3",
      "@shopify/ui-extensions-react": "2025.7.3"
    }
  }
}
